@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h2>Kategori Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize Emin misiniz?')" class="btn btn-danger">Pasif Yap</a></td>
            @* Ödev buunu sweetalert ile yap *@
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>

        </tr>
    }
</table>
<br />
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori Oluştur</a>

@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))