@using CoreDemo.Models
@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Ekleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="name" class="form-control" />
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
        @* model de olsutuduklarıı listelemeleye yarıyor.uyarı dizini olarak  *@
    </div>
    <button type="submit" class="btn btn-outline-success">Ekle</button>
</form>



