@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Role Güncelleme</h1>

<form method="post">
    <div class="form-group">
        <label>Rol ID</label>
        <input type="text" name="Id" class="form-control" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="name" class="form-control" value="@Model.name" />
    </div>
   
    <button type="submit" class="btn btn-outline-success">Ekle</button>
</form>