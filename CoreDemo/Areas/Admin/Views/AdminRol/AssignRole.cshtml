@* taghelpers kullanıgımızdan hata vermedi asp-for kullanabilirz... *@
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcının Sahip oldugu Roller</h1>
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">

                <form method="post">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].RoleID" />
                            <input type="hidden" asp-for="@Model[i].Name" />
                            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
                            <label class="form-check-label" for="@Model[i].Exist">@Model[i].Name</label>

                        </div>
                    }
                    <button  class="btn btn-outline-info float-lg-left">Değişiklikleri Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

<br />
<a href="/Admin/AdminRol/UserRoleList/" class="btn btn-primary">Kullanıcı Listesine DÖn</a>